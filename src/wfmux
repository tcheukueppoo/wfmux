   tmux_or_die
   requires git

   project_dir=`get_project_dir "$(tmux_cur_session)"`
   test -z "$project_dir" && die_not_wfmux

   cd -L "$project_dir"

   is_git_repository || return

   # TODO: wfmux_push
   # $GITLAB_TOK_NAME:$my_tok, --set-upstream $my_tok@...
}

spin () {
   pos=0 set -- − \\ \| /

   while true ; do 
      sleep 0.2
      pos=$(($pos + 1))
      eval 'printf "\b$'$((($pos % 4) + 1))'"'
   done
} 

opt_wfmux_push  () { wfmux_push;         }
opt_wfmux_fpush () { wfmux_push --force; }

opt_wfmux_awatch () {
   tmux_or_die

   project_dir=`get_project_dir "$(tmux_cur_session)"`
   test -z "$project_dir" && die_not_wfmux

   cd -L "$project_dir"

   printf 'watcher name: '
   read name
   test -z "$name" && return

   expr "$name" : '[a-zA-Z][-0-9a-zA-Z]*$' >/dev/null || {
      wfmux_fail "'$name' isn't a valid watcher name"
   }

   watch_conf="$project_dir/.wfmux/watch"

   if test -s "$watch_conf"  \
   && grep -q "^w,[-+],[01],\[$name\]:" "$watch_conf" ; then
      wfmux_fail "A watcher named '$name' already exists"
   fi

   printf 'one shot? (y/n) '
   read wtype
   test x"$wtype" = xy && wtype=1 || wtype=0

   printf 'cmd: '
   read cmd
   test -z "$cmd" && return

   files=$(get_project_files "$project_dir" | eval "$MENU")

   say "${NL%?}w+,$wtype,[$name]: $cmd${NL%?}${files}${NL%?}end" >>"$watch_conf"
}

select_watcher () {
   names=
   watch_conf=$1

   test -f "$watch_conf"       \
      && test -r "$watch_conf"  \
      && test -s "$watch_conf"   \
      || return

   names=$(sed -ne 's/^w[-+],[01],\[\([^]]\+\)\]:.\+$/\1/p' "$watch_conf")

   if test -z "$names" ; then
      wfmux_fail 'There are no configured watchers'
   fi

   say "$(say "$names" | eval "$MENU")"
}

validate_watch_conf () {
   name=$1 conf=$2

   ntags=$(
      say "$conf"                                      \
         | sed -ne "1s/^w[-+],[01],\[$name\]:.\+$/1/p"  \
                -e '$s/^end$/2/p'                        \
         | wc -l
   )

   test $ntags -ge 2 || wfmux_fail 'Invalid watcher config'
}

opt_wfmux_mwatch () {
   tmux_or_die

   edit=${EDITOR:-vim} requires "$edit"

   project_dir=`get_project_dir "$(tmux_cur_session)"`
   test -z "$project_dir" && die_not_wfmux

   cd -L "$project_dir"

   watch_conf="$project_dir/.wfmux/watch"

   name=$(select_watcher "$watch_conf")
   test -z "$name" && return

   e='
      /^w[-+],[01],\[[^]]\+\]:/ {
         p
         n
         b loop
      }
      b
      :loop
         /^[ \t]*$/ { n; b loop }
         /^end$/    { p; q }
         p
         n
         b loop
   '

   conf=$(sed -e "$e" "$watch_conf")
   if test -z "$conf" ; then
      wfmux_fail "There is no watcher named '$name'"
   fi

   validate_watch_conf "$name" "$conf"

   tmpfile=$(mktemp /tmp/wfmux.XXXXX)
   say "$conf" >>$tmpfile
   say '# Please edit the watcher configuration. Empty lines and' >>$tmpfile
   say '# lines starting with "#" will be ignored.' >>$tmpfile

   eval "$edit" $tmpfile
   conf=$(grep -xv '[ \t]*\(#.*\)\?' $tmpfile)

   del_watcher "$name" "$watch_conf"
   say "${NL%?}$conf" >>"$watch_conf"

   validate_watch_conf "$name" "$watch_conf"
}

del_watcher () {
   name=$1
   watch_conf=$2
   e="
      /^w[-+],[01],\[$name\]:/ { d; b del }
      b
      :del
         /^end$/ { d; q }
         d
         b del
   "

   sed -i "$e" "$watch_conf"
}

opt_wfmux_rwatch () {
   tmux_or_die

   project_dir=`get_project_dir "$(tmux_cur_session)"`
   test -z "$project_dir" && die_not_wfmux

   cd -L "$project_dir"

   watch_conf="$project_dir/.wfmux/watch"

   name=$(select_watcher "$watch_conf")
   test -z "$name" && return

   del_watcher "$name" "$watch_conf"
}

watch_state_edit () {
   tmux_or_die

   state=${1:-e}
   test x"$state" = x'-e' && state=+ || state=-

   project_dir=`get_project_dir "$(tmux_cur_session)"`
   test -z "$project_dir" && die_not_wfmux

   cd -L "$project_dir"

   watch_conf="$project_dir/.wfmux/watch"

   name=$(select_watcher "$watch_conf")
   test -z "$name" && return

   sed -i "s/^w[-+]\(,[01],\[$name\]:\)/w$state\1/" "$watch_conf"
}

opt_wfmux_dwatch () { watcher_state_edit -d;  }
opt_wfmux_ewatch () { watcher_state_edit -e;  }

println () {
   for i in "$@" ; do
      say "$i"
   done
}

start_watchers () {
   project_dir=$1
   watch_conf="$project_dir/.wfmux/watch"

   test -s "$watch_conf" || return

   name=
   wtype=
   cmd=

   n=0
   dir=false
   efiles=
   state=watcher

   while read line ; do
      n=$(($n + 1))

      if expr "$line" : '[\t ]*$' ; then
         continue
      elif expr "$line" : 'w+,[01],\[[^ \t:\]]\+\]:.\+$' ; then
         name=${line##*,[}
         name=${name%%]*}
         wtype=${line#*,}
         wtype=${wtype%%,*}
         cmd=${line##*:}
         efiles="$project_dir/.wfmux/efiles/$name.efiles"
         state=files
      elif expr "$line" : 'end$' \
      &&   test x$state = xfiles ; then
         say "$project_dir" >>"$efiles"
         nohup start_watcher "$name"   \
                              $wtype    \
                             "$cmd"      \
                              $dir        \
                             "$efiles"
         state=watcher
      elif test x$state = xfiles ; then
         file=$(say "$file" | sed -e 's/^[ \t]*//;s/[ \t]*$//;s/ /\\ /g')

         IFS=${NL%?}
         for efile in $(eval println "$file") ; do
            if ! test -e "$efile" ; then
               wfmux_fail "watcher($name): '$efile' does not exist"
            elif test -d "$efile" ; then
               dir=true
            fi
            say "$efile"
         done >$efiles
      fi
   done <"$watch_conf" >/dev/null

   if test x$state = xfiles ; then
      wfmux_fail "('$watch_config'): Failed to parse config at line $n."
   fi
}

start_watcher () {
   name=$1
   wtype=$2
   cmd='exec tmux set-buffer -b '$name' "$('"$3"' 2>&1)"'
   dir=$4
   efiles=$5

   args='-nps'
   test x$wtype = x1 && args="${args}r"

   if test x"$dir" = xfalse ; then
      printf $$ >>"$pidfile"
      exec entr $args "$cmd" <"$efiles"
   fi

   args="${args}d"
   while sleep 0.5 ; do
      test -e "$efiles"       \
         && test -s "$efiles"  \
         || {
         tmux set-buffer -b $name "Couldn't read '$efiles', please restart the watcher!"
         break
      }
      exec entr $args "$cmd" <"$efiles" &
      printf $! >>"$pidfile"
      waitpid $!
   done
}

opt_wfmux_wtop () {
   tmux_or_die

   project_dir=`get_project_dir "$(tmux_cur_session)"`
   test -z "$project_dir" && die_not_wfmux

   cd -L "$project_dir"

   watch_conf="$project_dir/.wfmux/watch"

}

#             --[ project_name ]--
#    PID:          not running(red), running($COLOR)
#    WATCHER_NAME: disable(red), enabled($COLOR)
#    o/m         : o, not monitored by $runner otherwise m
#
#    WATCHER_NAME   PID    o/m  COMMAND
#    watcher_name_1 pid_1  o    command_1
opt_view () {
   test -z "$project_name" && return
   project_name=`basename "$project_name"`

   printf "${ESC_UNDERLINE}${SUCCESS}${project_name}${ESC_UNSET_ANSI}${ESC_UNSET_ANSI}\n"
   printf "${ESC_BOLD}PID${ESC_UNSET_ANSI}:          shotdown(${ESC_RED}red${ESC_UNSET_ANSI}), running(${SUCCESS}this color${ESC_UNSET_ANSI})\n"
   printf "${ESC_BOLD}WATCHER_NAME${ESC_UNSET_ANSI}: disable(${ESC_RED}red${ESC_UNSET_ANSI}), enabled(${SUCCESS}this color${ESC_UNSET_ANSI})\n"
   printf "${ESC_BOLD}O/M${ESC_UNSET_ANSI}         : ${ESC_BOLD}O${ESC_UNSET_ANSI} = oneshot, ${ESC_BOLD}M${ESC_UNSET_ANSI} = not oneshot\n\n"

   watcher_file="$SESSION_DIR/$project_session/watch"
   while read watcher ; do
      watcher=$(printf "$watcher" | sed -ne "s///p")
      _name=$(printf "$watcher" | awk 'BEGIN{RS="";FS="\n"};{print $1}')
      pid_file="$SESSION_DIR/$project_session/$_name/pid"
      test -s "$pid_file" && _pid=$(cat "$pid_file") || _pid=X
   
      test ${#pid}  -gt $j && j=${#pid}
      test ${#name} -gt $i && i=${#name}

      pid=${pid}${pid:+"\n"}$_pid
      name=${name}${name:+"\n"}$_name
      stat=${stat}${stat:+"\n"}$(printf "$watcher" | awk 'BEGIN{RS="";FS="\n"};{print $2}')
      shot=${shot}${shot:+"\n"}$(printf "$watcher" | awk 'BEGIN{RS="";FS="\n"};{print $3}')
      comm=${comm}${comm:+"\n"}$(printf "$watcher" | awk 'BEGIN{RS="";FS="\n"};{print $4}')
   done <"$watcher_file"

   printf "%${i}s |%${j}s |%-4s |%s\n" "WATCHER_NAME" "PID" "O/M" "COMMAND"
   printf "%${i}s |%${j}s |%-4s |%s\n" "" "" "" ""

   while [ 1 ] ; do
      test ${#name} -eq 0 && break
      printf "%${i}s |%${j}s |%-4s |%s\n" "$_name" "$_pid" "$_stat" "$_comm"
   done
}


opt_ksession () { :; }

# Cycle through std(out&stderr) of watchers
opt_cycle () { :; }

add_plug () {
   name=${1:-}
   test -z "$name" && return

   say "$WFMUX_OPS" | grep -xqF "$name" || {
      wfmux_message "Another plugin has this name."
      return
   }

   WFMUX_OPS="${WFMUX_OPS}${NL%?}$name"
}

wfmux_load_plugins () {
   test -d "$WFMUX_PLUG_DIR" || return
   test -r "$WFMUX_PLUG_DIR" || {
      tmux_message "No read permission for '$WFMUX_PLUG_DIR'"
      return 0
   }

   for plug in "$WFMUX_PLUG_DIR"/*.wfmux.sh ; do
      . "$plug"
      test $? -eq 0 && continue
      tmux_message "load('$plug') has a non-zero exit status"
      return 1
   done
}

opt_wfmux_ops () {
   tmux_or_die

   wfmux_load_plugins || return

   opt=$(say "$WFMUX_OPS" | grep -xEv 'new|ops' | eval "$MENU")
   test -z "$opt" && return

   func="opt_wfmux_$opt"

   cmd_val=`command -v "$func"`
   if test -z "$cmd_val" ; then
      tmux_message "$func: undefined wfmux operation"
   elif test x"$cmd_val" != x"$func" ; then
      tmux_message "$func: wfmux operation should be a function!"
   else
      eval "$func"
   fi
}

main "$@"
